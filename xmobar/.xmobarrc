Config
  { font = "xft:Hasklig:pixelsize=22:antialias=true"
  , bgColor = "#002b36"
  , fgColor = "#657b83"
  , border = NoBorder
  , borderColor = "black"
  , hideOnStart = False
  , persistent = True
  , position = Top
  , alpha = 0
  , lowerOnStart = True
  , commands = [ Run Cpu ["-L","3","-H","50","--normal","#657b83","--high","#657b83"] 10
               , Run Memory ["-t","Mem: <usedratio>%"] 10
               , Run Date "<fc=#93a1a1>%a %b %_d.%m.%Y %H:%M</fc>" "date" 10
               , Run StdinReader
               , Run BatteryP ["BAT0"] [ "-t", "Bat: <left>%"
                                       , "-L", "10", "-H", "80", "-p", "3"
                                       , "--", "-O", "<fc=green>On</fc> - ", "-i", ""
                                       , "-L", "-15", "-H", "-5"
                                       , "-l", "red", "-m", "blue", "-h", "green"
                                       ] 600
               ]
  , sepChar = "%"
  , alignSep = "}{"
  , template = " %StdinReader% }{ %battery% =<< %cpu% =<< %memory% << %date% "
  }
